@model ShortURL
@{
    ViewData["Title"] = "Details of a short URL";
}

<br />

<div class="jumbotron">

    <div class="text-light bg-dark w-50 rounded-3">
        <h1>UnReaL Shortener</h1>
    </div>

        <div class="text-light bg-dark w-50 rounded-3">
        <p>You can see below the details of this short URL.</p>
    </div>
    <br />

    <ul class="text-light bg-dark rounded-3 w-75" style="word-wrap:break-word">
        <li>
            <span class="col-md-2">
                <strong>URL Id:</strong>
            </span>
            @Model.Id
        </li>
        <li>
            <span class="col-md-2">
                <strong>Original URL:</strong>
            </span>
            <a href="@Model.Url">
                @Model.Url
            </a>
        </li>
        <li>
            <span class="col-md-2">
                <strong>Short URL:</strong>
            </span>
            <a asp-controller="UnReaL" asp-action="RedirectTo" asp-route-path="@ViewData["Path"]">
                http://localhost:5000/UnReaL/RedirectTo/@ViewData["Path"]
            </a>
        </li>
    </ul>
</div>